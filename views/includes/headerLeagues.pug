mixin headerLeagues(leagues, activeLeague)
  if leagues.length > 0
    div.league-nav
      span |&nbsp;
      for league in leagues
        span
          a(
            href=`/league/${league.uri_name}`
            style=(activeLeague === league.uri_name ? "font-weight: bold" : ""))= league.uri_name.toUpperCase()
          span  |&nbsp;